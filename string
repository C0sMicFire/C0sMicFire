#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string a,b;
    
    getline(cin,a);
    getline(cin,b);
    int x = a.size();
    
    int y = b.size();
    cout<<x<<" "<<y<<endl;
    cout<<a+b<<endl;
    char i = a[0];
    a[0]=b[0];
    b[0]=i;
    cout<<a<<" "<<b;
    
    
    return 0;
}
